<% if @user && @user.errors.any? %>
  <div class="alert alert-danger">
    <strong>Oops! There's an issue with your signup submission - please fix them:</strong>
    <ul>
      <% @user.errors.full_messages.each do |user| %>
        <li><%= user %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="signup-form">
  <h2>Sign Up Now For Aural Democracy</h2>
  <form method="post" action="/users">
    <div class="form-group">
      <label>Email:</label>
      <input type="text" class="form-control" name="email" value="<%= @user && @user.email %>">
    </div>
    <div class="form-group">
      <label>Password:</label>
      <input type="password" class="form-control" name="password">
    </div>
    <div class="form-group">
      <input type="submit" class="btn btn-primary" value="Submit">
    </div>
  </form>
</section>
